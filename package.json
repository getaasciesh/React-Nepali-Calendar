{
  "name": "react-nepali-calendar",
  "version": "1.0.2",
  "description": "React Component for Nepali BS Calendar",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "dev": "node ./fuse.js",
    "dist": "node ./fuse.js dist"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./testSetup.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "author": "Asish Bhattarai",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.1",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "fuse-box": "^3.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.2.0",
    "postcss-import": "^11.1.0",
    "postcss-modules": "^1.1.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.4.3",
    "node-sass": "^4.9.1"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  }
}